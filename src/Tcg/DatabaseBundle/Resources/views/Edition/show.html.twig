{% extends "TcgDatabaseBundle::layout.html.twig" %}


{% block content %}
    <h1>Edition</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
            <tr>
                <th>Nbcartes</th>
                <td>{{ entity.nbCartes }}</td>
            </tr>
            <tr>
                <th>Starterdeck</th>
                <td>{{ entity.starterDeck }}</td>
            </tr>
            <tr>
                <th>Icone</th>
                <td>{{ entity.icone }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('edition_list') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('edition_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('edition_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock content %}
