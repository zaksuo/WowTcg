<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="carte_list" pattern="/cartes">
        <default key="_controller">TcgDatabaseBundle:Carte:index</default>
    </route>

    <route id="carte_show" pattern="/carte/{id}/show">
        <default key="_controller">TcgDatabaseBundle:Carte:show</default>
    </route>

    <route id="carte_new" pattern="/carte/new">
        <default key="_controller">TcgDatabaseBundle:Carte:new</default>
    </route>

    <route id="carte_create" pattern="/carte/create">
        <default key="_controller">TcgDatabaseBundle:Carte:create</default>
    </route>

    <route id="carte_edit" pattern="/carte/{id}/edit">
        <default key="_controller">TcgDatabaseBundle:Carte:edit</default>
    </route>

    <route id="carte_update" pattern="/carte/{id}/update">
        <default key="_controller">TcgDatabaseBundle:Carte:update</default>
    </route>

    <route id="carte_delete" pattern="/carte/{id}/delete">
        <default key="_controller">TcgDatabaseBundle:Carte:delete</default>
    </route>

</routes>
